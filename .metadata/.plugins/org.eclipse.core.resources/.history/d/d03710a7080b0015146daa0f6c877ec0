public class Generator {
	private String name;
	private int attributes_quantity;

	public int getAttributes_quantity() {
		return attributes_quantity;
	}

	public void setAttributes_quantity(int attributes_quantity) {
		this.attributes_quantity = attributes_quantity;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public static void main(String[] args){

		Scanner sc = new Scanner(System.in);
		Generator gen = new Generator();

		System.out.println("            Class generator      ");
		System.out.println("[===================================]");
		System.out.println("Set class name: ");
		gen.setName(sc.nextLine());
		System.out.println("-------------------------------------");

		System.out.print("Set attributes quantity: ");
		gen.setAttributes_quantity(sc.nextInt());
		System.out.println("-------------------------------------");

		String[] tab = new String[gen.attributes_quantity+1];
		System.out
				.println("Set attributes types and names ( for example: string surname )");

		tab[0] = "string name";
		tab[1] = "string surname";
		tab[2] = "string age";
		int first_loop = 0;
		for (int i = 0; i < gen.attributes_quantity; i++) 
		{
			System.out.print("Quantity number ");
			System.out.println(i);
			tab[i] =sc.nextLine();
			first_loop++;
		}
		tab[first_loop] =sc.nextLine();

		System.out.println("-------------------------------------");

		System.out.print("Class name: ");
		System.out.println(gen.getName());
		System.out.print("Attributes quantity: ");
		System.out.println(gen.getAttributes_quantity());
		for (int i = 0; i < gen.attributes_quantity; i++) 
		{
			System.out.print("Quantity number ");
			System.out.println(i);
			System.out.println(tab[i]);
		}
		sc.close();

		FileWriter file_cpp = null;
		try {
			file_cpp = new FileWriter("main.cpp");
			file_cpp.close();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

		// -----------------------------------------------------------------------------------
		FileWriter file_hpp = null;
		try {
			file_hpp = new FileWriter("main.hpp");
			String[] before_class = {"#ifndef main_hpp","#define main_hpp","#include <iostream>","using namespace std;","\n"};
			for( int i  =0; i < before_class.length; i++ )
			{
				file_hpp.write(before_class[i]);
				file_hpp.write("\n");
			}
			file_hpp.write("\n");
			file_hpp.write("class ");
			file_hpp.write(gen.getName());
			file_hpp.write("{");
			file_hpp.write("\n");
			file_hpp.write("   protected:");
			file_hpp.write("\n");
			
			for (int i = 0; i < gen.attributes_quantity; i++) 
			{
				file_hpp.write("       ");
				file_hpp.write(tab[i]);
				file_hpp.write("\n");
			}
			
			file_hpp.close();
	        System.out.println("Done");
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

		
	}
}
