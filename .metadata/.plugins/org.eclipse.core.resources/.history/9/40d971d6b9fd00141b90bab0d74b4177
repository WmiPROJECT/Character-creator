//-------------------------------------------------------------------------------------New_Character interface
interface New_Character {
	public void SetNickname();
	public void SetWeapon();
	public void SetArmor();
	public void SetSkill();
	
}
//-------------------------------------------------------------------------------------ORC abstract class
abstract class Orc implements New_Character{
	protected String race;
	protected String nickname;
	protected String weapon;
	protected String armor;
	protected String skill;
	protected int melee_attack;
	protected int magic_attack;
	protected int ranged_attack;
	protected int vitality;
	protected int attack_speed;
	
	
	public Orc(){
		race="Orc";
		melee_attack=10;
		magic_attack=10;
		ranged_attack=10;
		vitality=10;
		attack_speed=10;
	}
	public void SetNickname() {
		System.out.println(nickname);
	}
	public void SetWeapon(){
		System.out.println(weapon);
	}
	public void SetArmor(){
		System.out.println(armor);
	}
	public void SetSkill(){
		System.out.println(skill);
	}
}
//-------------------------------------------------------------------------------------ELF abstract class
abstract class Elf implements New_Character{
	protected String race;
	protected String nickname;
	protected String weapon;
	protected String armor;
	protected String skill;
	protected int melee_attack;
	protected int magic_attack;
	protected int ranged_attack;
	protected int vitality;
	protected int attack_speed;
	
	
	public Elf(){
		race="Elf";
		melee_attack=15;
		magic_attack=15;
		ranged_attack=15;
		vitality=15;
		attack_speed=15;
	}
	public void SetNickname() {
		System.out.println(nickname);
	}
	public void SetWeapon(){
		System.out.println(weapon);
	}
	public void SetArmor(){
		System.out.println(armor);
	}
	public void SetSkill(){
		System.out.println(skill);
	}
}
//-------------------------------------------------------------------------------------ORC Warrior class
class Orc_Warrior extends Orc{
	public Orc_Warrior(String n, String w, String a, String s){
		nickname=n;
		weapon=w;
		armor=a;
		skill=s;
		melee_attack+=10;
		vitality+=10;
	}
	
}
//-------------------------------------------------------------------------------------ELF Warrior class
class Elf_Warrior extends Elf{
	public Elf_Warrior(String n, String w, String a, String s){
		nickname=n;
		weapon=w;
		armor=a;
		skill=s;
		melee_attack+=20;
		vitality+=20;
	}
}
//-------------------------------------------------------------------------------------ORC Warrior class
class Orc_Mage extends Orc{
	public Orc_Mage(String n, String w, String a, String s){
		nickname=n;
		weapon=w;
		armor=a;
		skill=s;
		melee_attack+=10;
		vitality+=10;
	}
	
}
//-------------------------------------------------------------------------------------ELF Warrior class
class Elf_Mage extends Elf{
	public Elf_Mage(String n, String w, String a, String s){
		nickname=n;
		weapon=w;
		armor=a;
		skill=s;
		melee_attack+=20;
		vitality+=20;
	}
}
//-------------------------------------------------------------------------------------ORC Warrior class
class Orc_Ranger extends Orc{
	public Orc_Ranger(String n, String w, String a, String s){
		nickname=n;
		weapon=w;
		armor=a;
		skill=s;
		melee_attack+=10;
		vitality+=10;
	}
	
}
//-------------------------------------------------------------------------------------ELF Warrior class
class Elf_Ranger extends Elf{
	public Elf_Ranger(String n, String w, String a, String s){
		nickname=n;
		weapon=w;
		armor=a;
		skill=s;
		melee_attack+=20;
		vitality+=20;
	}
}

//-----------------------------------------------------------------------------------------------MAIN
public class Creator {
	public static void main(String[]args){
		Orc_Warrior darek_orc = new Orc_Warrior("Darek","Sword","Plate","Fire");
		System.out.println(darek_orc.race);
		darek_orc.SetNickname();
		System.out.println(darek_orc.attack_speed);
		System.out.println(darek_orc.melee_attack);
		
		System.out.println("\n");
		
		Elf_Warrior darek_elf = new Elf_Warrior("Mietek","Axe","Golden","Iice");
		System.out.println(darek_elf.race);
		darek_elf.SetNickname();
		System.out.println(darek_elf.vitality);
		darek_elf.armor="shitty";
		darek_elf.SetArmor();
	}
}
	
