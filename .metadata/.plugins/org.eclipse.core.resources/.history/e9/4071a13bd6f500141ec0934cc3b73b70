package create.characters;

import java.awt.BorderLayout;
import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import javax.swing.JTextField;
import javax.swing.JLabel;
import javax.swing.SwingConstants;

public class New_Character_Menu extends JFrame {

	private JPanel contentPane;
	private JTextField Name_textfiled;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					New_Character_Menu frame = new New_Character_Menu();
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public New_Character_Menu() {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 800, 600);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(contentPane);
		contentPane.setLayout(null);
		
		Name_textfiled = new JTextField();
		Name_textfiled.setBounds(210, 21, 86, 20);
		contentPane.add(Name_textfiled);
		Name_textfiled.setColumns(10);
		
		JLabel Name_label = new JLabel("Name:");
		Name_label.setHorizontalAlignment(SwingConstants.RIGHT);
		Name_label.setBounds(132, 16, 76, 31);
		contentPane.add(Name_label);
	}
}
