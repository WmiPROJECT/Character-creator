				            System.out.println("File renamed");
				        }else{
				            System.out.println("Sorry! the file can't be renamed");
				        }
				    }
				      
				    catch (FileNotFoundException ex) {
				      ex.printStackTrace();
				    }
				    catch (IOException ex) {
				      ex.printStackTrace();
				    }

	
				try{
					 
		    		File file = new File("CharactersDB\\"+lblNickname.getText()+".dat");
		 
		    		file.delete();
		    			
		 
		    	}catch(Exception e){
		 
		    		e.printStackTrace();
		 
		    	}
